<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3E3C35"
    tools:context=".AboutActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:text="ABOUT . . ."
        android:textColor="#78909C"
        android:textSize="34sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textViewParagraph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:background="@color/black"
        android:padding="21dp"
        android:text="You think you can't cook with left Groceries? Let us change your capability! Enter any ingredients,and we'll show you recipes you could make. SIMPLE! START NOW!!"
        android:textAlignment="gravity"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="normal|bold" />


</RelativeLayout>