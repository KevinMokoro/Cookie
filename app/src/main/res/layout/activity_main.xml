<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/restaurants111" />

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="114dp"
        android:background="@color/white"
        android:fontFamily="@font/monoton"
        android:padding="10dp"
        android:text="KOOKIE"
        android:textSize="60sp" />


    <Button
        android:id="@+id/findRecipes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/savedRecipesButton"
        android:layout_marginBottom="10dp"
        android:background="@color/teal_700"
        android:text="Find Ready Recipes"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/aboutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@color/memm"
        android:text="About"
        android:textColor="#311B92"
        android:textStyle="italic" />


    <Button
        android:id="@+id/savedRecipesButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="@color/teal_700"
        android:text="SAVED RECIPES"
        android:textColor="@color/white"
        android:visibility="visible" />



</RelativeLayout>